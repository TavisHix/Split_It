<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Results"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="154dp"
        android:layout_marginRight="154dp"
        android:text="0"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        tools:targetApi="lollipop" />

    <EditText
        android:id="@+id/user_InputC"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_Input"
        android:layout_alignStart="@+id/user_Input"
        android:layout_alignLeft="@+id/user_Input"
        android:layout_marginStart="77dp"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="29dp"
        android:width="300dp"
        android:hint="Cost"
        android:importantForAutofill="no"
        android:inputType="numberSigned|number|numberDecimal" />

    <EditText
        android:id="@+id/user_Input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="81dp"
        android:width="300dp"
        android:hint=" Name of item"
        android:inputType="text"
        android:singleLine="true" />

    <Button
        android:id="@+id/add_Button"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_below="@+id/user_InputC"
        android:layout_alignStart="@+id/user_Input"
        android:layout_alignLeft="@+id/user_Input"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="71dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="134dp"
        android:layout_marginRight="134dp"
        android:text="Add" />

    <Button
        android:id="@+id/delete_Button"
        android:layout_width="152dp"
        android:layout_height="63dp"
        android:layout_alignEnd="@+id/user_Input"
        android:layout_alignRight="@+id/user_Input"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="347dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="321dp"
        android:onClick="deleteButtonClicked"
        android:text="Delete" />

    <TextView
        android:id="@+id/records_TextView"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/user_Input"
        android:layout_alignLeft="@+id/user_Input"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-50dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginTop="200dp"
        android:textAppearance="@android:style/TextAppearance"
        android:visibility="invisible" />

    <Button
        android:id="@+id/viewButton"
        android:layout_width="109dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginBottom="58dp"
        android:onClick="clearButtonClciked"
        android:text="Clear Data " />

    <Button
        android:id="@+id/button2"
        android:layout_width="109dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="67dp"
        android:layout_marginRight="67dp"
        android:layout_marginBottom="56dp"
        android:onClick="splitButtonClciked"
        android:text="Split" />

</RelativeLayout>